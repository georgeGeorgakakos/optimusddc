{
  "compilerOptions": {
    "lib": ["es5", "es2015", "dom", "scripthost"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2015",
    "strictNullChecks": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "moduleResolution": "node",
    "noResolve": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "js",
    "paths": {
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "config/*": ["config/*"],
      "ducks/*": ["ducks/*"],
      "interfaces/*": ["interfaces/*"],
      "stories/*": ["stories/*"]
    }
  },
  "exclude": [
    "**/__tests__",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/fixtures/**",
    "dist"
  ],
  "include": ["*.ts", "*.js", ".eslintrc.js", "js/"]
}